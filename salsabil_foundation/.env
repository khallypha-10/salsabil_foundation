 <!-- start wpo-news-letter-section -->
    <section class="wpo-news-letter-section">
        <div class="container">
            <div class="row">
                <div class="col col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="wpo-newsletter">
                        <h3>Follow us for more information</h3>
                        <div class="wpo-newsletter-form">
                            <form method="post" action="{% url 'subscribe' %}">
                                {% csrf_token %}
                                <div>
                                    <input name="sub" type="text" placeholder="Enter Your Email" class="form-control">
                                    <button type="submit">Subscribe</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- end container -->
    </section>